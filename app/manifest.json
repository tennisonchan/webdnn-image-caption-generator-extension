{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon.png",
    "128": "images/icon.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["scripts/chromereload.js", "scripts/background.js"]
  },
  "permissions": ["tabs", "http://*/*", "https://*/*", "background"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/contentscript.js"],
      "css": ["styles/main.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
